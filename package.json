{
  "name": "petehome-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "petehome ecosystem - Smart home control center with web, desktop, mobile, and browser extension apps",
  "author": "Pete",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "cd apps/web && yarn dev:https",
    "dev:http": "cd apps/web && yarn dev",
    "build": "cd apps/web && yarn build",
    "start": "cd apps/web && yarn start",
    "start:network": "cd apps/web && yarn start:network",
    "install:web": "cd apps/web && yarn install",

    "p:start": "pm2 start ecosystem.config.js --only petehome-https",
    "p:start:http": "pm2 start ecosystem.config.js --only petehome-dev",
    "p:start:prod": "pm2 start ecosystem.config.js --only petehome",
    "p:start:toast": "pm2 start ecosystem.config.js --only petehome-vercel-toast",
    "p:stop": "pm2 stop petehome-https",
    "p:stop:http": "pm2 stop petehome-dev",
    "p:stop:prod": "pm2 stop petehome",
    "p:stop:toast": "pm2 stop petehome-vercel-toast",
    "p:restart": "pm2 restart petehome-https",
    "p:restart:http": "pm2 restart petehome-dev",
    "p:restart:prod": "pm2 restart petehome",
    "p:restart:toast": "pm2 restart petehome-vercel-toast",
    "p:logs": "pm2 logs petehome-https",
    "p:logs:http": "pm2 logs petehome-dev",
    "p:logs:prod": "pm2 logs petehome",
    "p:logs:toast": "pm2 logs petehome-vercel-toast",
    "p:status": "pm2 status",

    "sync": "cd apps/web && yarn sync",
    "sync:watch": "cd apps/web && yarn sync:watch",
    "sync:tj": "cd apps/web && yarn sync:tj",

    "vercel-toast": "cd apps/web && yarn vercel-toast",
    "vercel-toast:watch": "cd apps/web && yarn vercel-toast:watch",

    "lint": "cd apps/web && yarn lint",
    "lint:fix": "cd apps/web && yarn lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "type-check": "cd apps/web && yarn type-check",
    "clean": "cd apps/web && yarn clean",

    "desktop": "cd apps/desktop && yarn start",
    "desktop:build": "cd apps/desktop && yarn build",
    "desktop:install": "cd apps/desktop && yarn install"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "devDependencies": {
    "node-notifier": "^10.0.1"
  }
}
